<p id="notice"><%= notice %></p>

<h1 class="index-title">Policies</h1>

<table class="index-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Data source</th>
      <th>World region</th>
      <th>Country</th>
      <th>Country region</th>
      <th>City</th>
      <th>Link</th>
      <th>Jurisdiction</th>
      <th>Agency</th>
      <th>Policy written year</th>
      <th>Policy implementation period start year</th>
      <th>Policy implementation period end year</th>
      <th>Policy status</th>
      <th>Policy type</th>
      <th>Policy target</th>
      <th>Description</th>
      <th>Ghgs affected</th>
      <th>Related to eu policy boolean</th>
      <th>Related to eu policy</th>
      <th>Impact on eu ets esd or lulucf emissions</th>
      <th>Total ghg emissions reductions in 2020</th>
      <th>Total ghg emissions reductions in 2030</th>
      <th>Related to neeap policy boolean</th>
      <th>Related to neeap policy</th>
      <th>Impact evaluation</th>
      <th>Policy financing quantity</th>
      <th>Policy financing period start</th>
      <th>Policy financing period end</th>
      <th>Percent private funded</th>
      <th>Related documents</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @policies.each do |policy| %>
      <tr>
        <td><%= link_to policy.name, policy %></td>
        <td><%= policy.data_source %></td>
        <td><%= policy.world_region %></td>
        <td><%= policy.country %></td>
        <td><%= policy.country_region %></td>
        <td><%= policy.city %></td>
        <td><%= policy.link %></td>
        <td><%= policy.jurisdiction %></td>
        <td><%= policy.agency %></td>
        <td><%= policy.policy_written_year %></td>
        <td><%= policy.policy_implementation_period_start_year %></td>
        <td><%= policy.policy_implementation_period_end_year %></td>
        <td><%= policy.policy_status %></td>
        <td><%= policy.policy_type %></td>
        <td><%= policy.policy_target %></td>
        <td><%= policy.description %></td>
        <td><%= policy.ghgs_affected %></td>
        <td><%= policy.related_to_eu_policy_boolean %></td>
        <td><%= policy.related_to_eu_policy %></td>
        <td><%= policy.impact_on_eu_ets_esd_or_lulucf_emissions %></td>
        <td><%= policy.total_ghg_emissions_reductions_in_2020 %></td>
        <td><%= policy.total_ghg_emissions_reductions_in_2030 %></td>
        <td><%= policy.related_to_neeap_policy_boolean %></td>
        <td><%= policy.related_to_neeap_policy %></td>
        <td><%= policy.impact_evaluation %></td>
        <td><%= policy.policy_financing_quantity %></td>
        <td><%= policy.policy_financing_period_start %></td>
        <td><%= policy.policy_financing_period_end %></td>
        <td><%= policy.percent_private_funded %></td>
        <td><%= policy.related_documents %></td>
        <td><%= link_to 'Edit', edit_policy_path(policy) %></td>
        <td><%= link_to 'Destroy', policy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

